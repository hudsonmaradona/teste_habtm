<%= form_for([:admin, @category], html: { class: "form-horizontal", :multipart => true}) do |f| %>

    <div class="row">
      <div class="span6 form-left">

        <%= f.label :title, 'TÃ­tulo', class: 'label label-info' %>
        <div class="input">
          <%= f.text_field :title, class: 'span6' %>
        </div>

        <%= f.label :cover, 'Capa', class: 'label label-info' %>
        <div class="input">
          <%= image_tag @category.cover(:thumb), class: 'img-polaroid' unless @category.cover_file_name.blank? %><%= f.file_field :cover %>
        </div>

        <br />
      </div>
    </div>
    <br />

    <div class="well actions">
      <%= f.submit class: 'btn btn-primary', :disable_with => 'Carregando...' %>
      <%=  link_to t(:cancel), :back, class: 'btn btn-danger', :disable_with => 'Carregando...' %>
    </div>

<% end %>


