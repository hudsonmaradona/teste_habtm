<% content_for :breadcrumb do %>
    <li><%= link_to t('activerecord.models.novel_category.many'), admin_novel_categories_path %> <span class="divider">/</span></li>
    <li class="active"><%= @category.title %></li>
<% end %>

<%= nav_bar_admin('Detalhes Novela - ' + @category.title) %>

<table class="table table-striped table-bordered table-condensed">

  <tr>
    <th>Título :</th>
    <td><%= @category.title %></td>
  </tr>

  <tr>
    <th>Capa :</th>
    <td><%= image_tag @category.cover(:medium), class: 'img-polaroid' %></td>
  </tr>

</table>
<div class="well actions">
  <%= link_to 'Voltar', :back, class: 'btn', :disable_with => 'Carregando...' %>
  <%= link_to 'Editar', edit_admin_novel_category_path(@category), class: 'btn btn-warning', :disable_with => 'Carregando...' %>
  <%= link_to 'Excluir', admin_novel_category_path(@category), :method => :delete, :confirm => 'Confirmar exclusão?', class: 'btn btn-danger', :disable_with => 'Carregando...' %>
</div>

