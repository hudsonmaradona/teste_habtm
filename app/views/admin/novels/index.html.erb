<% content_for :breadcrumb do %>
    <li class="active">Jogos</li>
<% end %>

<table class="table zebra-striped table-striped table-bordered">
  <thead>
  <tr>
    <th>Título</th>
    <th colspan='3'>Ações</th>
  </tr>
  </thead>
  <tbody>
  <% @novels.each do |novel| %>
      <tr>
        <td><%= truncate(novel.title, :length => 115) %></td>
        <td class="actions"><i class="icon-hand-up"></i><%= link_to 'Visualizar', [:admin,novel] %></td>
        <td class="actions"><i class="icon-edit"></i><%= link_to 'Editar', [:edit,:admin,novel] %></td>
        <td class="actions"><i class="icon-remove-sign"></i><%= link_to 'Excluir', [:admin,novel], method: 'delete', confirm: 'Confirmar exclusão?' %></td>
      </tr>

  <% end %>
  </tbody>
</table>

<br />

<div id="clear">

</div>

<div class="well actions">
  <%= link_to 'Nova Novela', new_admin_novel_path, :class => "btn btn-success" %>
</div>